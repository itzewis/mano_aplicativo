<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.Perfil">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/userNome"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="117dp"
            android:gravity="center"
            android:text="Emilly Carvalho"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userFoto"
            style="@style/circulo"
            android:src="@drawable/ic_camera"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_below="@+id/userNome"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="136dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="129dp">

        </com.google.android.material.imageview.ShapeableImageView>

        <ImageView
            android:id="@+id/btnConfig"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_configuracoes" />

        <Button
            android:id="@+id/editarPerfil"
            style="@style/botao"
            android:layout_width="131dp"
            android:layout_height="48dp"
            android:layout_below="@+id/userFoto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="147dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="133dp"
            android:padding="0dp"
            android:text="Editar Perfil"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_voltar" />

        <Button
            android:id="@+id/publicacoes"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editarPerfil"
            android:layout_alignParentStart="true"

            android:layout_marginStart="7dp"
            android:layout_marginTop="21dp"
            android:backgroundTint="@color/white"
            android:text="Publicações"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/mavaliacaoes"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editarPerfil"
            android:layout_alignParentStart="true"
            android:layout_marginStart="259dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            android:text="Avaliações"
            android:textColor="@color/black" />

        <FrameLayout
            android:id="@+id/tperfil"
            android:layout_width="match_parent"
            android:layout_height="405dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp" />


    </RelativeLayout>

</FrameLayout>