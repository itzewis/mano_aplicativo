<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.Criar_Publicacao">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="97dp"
            android:gravity="center"
            android:text="Criar Publicação"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnCriarPuli"
            style="@style/botao"
            android:layout_width="278dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="101dp"
            android:gravity="center"
            android:text="Publicar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

    <EditText
        android:id="@+id/edtTitulo"
        style="@style/edit_text"
        android:layout_width="307dp"
        android:layout_height="67dp"
        android:layout_above="@+id/edtDescricao"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:hint="Titulo do seu serviço" />

    <EditText
        android:id="@+id/edtDescricao"
        style="@style/edit_text"
        android:layout_width="306dp"
        android:layout_height="162dp"
        android:layout_above="@+id/btnCriarPuli"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="186dp"
        android:ems="10"
        android:gravity="start"
        android:hint="Descrição do seu serviço" />

    <EditText
            android:id="@+id/valor"
            style="@style/edit_text"
            android:layout_width="307dp"
            android:layout_height="67dp"
            android:layout_above="@+id/btnCriarPuli"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:inputType="numberDecimal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="49dp"
            android:ems="10"
            android:hint="Valor do Serviço" />

</RelativeLayout>

